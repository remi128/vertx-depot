<!DOCTYPE html>
<html>
<head>
    <title>Pragprog Books Online Store</title>
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="/css/application.css" />
    <link rel="stylesheet" type="text/css" href="/css/scaffolds.css" />
    <link rel="stylesheet" type="text/css" href="/css/store.css" />
    <script type="text/javascript" src="/js/jquery-1.11.2.min.js"></script>
    <script type="text/javascript" src="/js/jquery.restfulizer.js"></script>
</head>
<body class="store">
<div id="banner">
    <img src="/images/logo.png" />
    {{#if page_title}}<span>{{page_title}}</span>{{else}}<span>Pragmatic Bookshelf</span>{{/if}}
</div>
<div id="columns">
    <div id="side">{{> templates/side_menu}}</div>
    <div id="main">
        {{#notice}}<p id="notice">{{notice}}</p>{{/notice}}
        <h1>Your Pragmatic Catalog</h1>
        {{#each products}}
            <div class="entry">
                {{#imageUrl}}
                    <img src="{{imageUrl}}" class="list_image" />
                {{/imageUrl}}
                <h3>{{title}}</h3>
                <div>{{{description}}}</div>
                <div class="price_line">
                    <span class="price">${{price}}</span>
                    <form action="/line_items/create/{{id}}">
                        <button type="submit">Add to Cart</button>
                    </form>
                </div>
            </div>
        {{/each}}
    </div>
</div>
<script type="text/javascript">
    $(".rest").restfulizer();
</script>
</body>
</html>
